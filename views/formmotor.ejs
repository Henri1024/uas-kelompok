  </nav>

  <div class="frame">
    <div class="wrapper">
      <div class="aggreement-form">
        <div class="input-fields">
          <%- include ("partials/messages"); %>
            <h1> Formulir Pemesanan</h1>

            <h3 style="color: white;">
              <%- item.merk %>
                <%- item.tipe %>
            </h3>

            <form action="http://localhost:3000/motor/<%- item.id %>/rent" method="POST">
              <input type="text" class="input" placeholder="Nama" id="fieldnama" name="fieldnama" required
                value="<%= typeof fieldnama != 'undefined' ? fieldnama : '' %>">
              <input type="number" class="input" placeholder="No KTP" id="noktp" name="noktp" required
                value="<%= typeof noktp != 'undefined' ? noktp : '' %>">
              <input type="email" class="input" placeholder="Email" id="emailaddr" name="emailaddr" required
                value="<%= typeof emailaddr != 'undefined' ? emailaddr : '' %>">
              <input type="number" class="input" placeholder="No Telepon" id="notlp" name="notlp" required
                value="<%= typeof notlp != 'undefined' ? notlp : '' %>">
              <br>

              <h4>Kapan anda mau mulai menyewa:</h4>
              <input type='date' class="form-control" id="datestart" name="datestart" required
                value="<%= typeof datestart != 'undefined' ? datestart : '' %>" />


              <h4>Sampai tanggal berapa anda mau menyewanya:</h4>
              <input type='date' class="form-control" id="dateend" name="dateend" required
                value="<%= typeof dateend != 'undefined' ? dateend : '' %>" />

              <br>
              <input type="text" class="input" placeholder="Harga" id="harga" name="harga" disabled required
                value="<%= typeof harga != 'undefined' ? harga : 0 %>">
              <br>

              <br><br>
              <div class="text-center">
                <a class="btn-cancel" id="cancel-btn" href='./'>Cancel</a>
                <button type="submit" class="btn-submit" id="book-btn">Book</button>
              </div>

            </form>
            <script type="text/javascript">
              const bookbtn = document.getElementById("book-btn")
              bookbtn.addEventListener("click", function () {

                const nama = document.getElementById('fieldnama').value != ""
                const noktp = document.getElementById('noktp').value != ""
                const emailaddr = document.getElementById('emailaddr').value != ""
                const notlp = document.getElementById('notlp').value != ""
                const datestart = document.getElementById('datestart').value != ""
                const dateend = document.getElementById('dateend').value != ""
              })
            </script>


            <script>
              var itemstr = '<%- JSON.stringify(item) %>';
              var item = JSON.parse(itemstr);
              const datepickend = $('#dateend').on("change", function () {
                var validdatestart = new Date(datestart.value)
                var validdateend = new Date(dateend.value)
                var Difference_In_Time = validdatestart.getTime() - validdateend.getTime();
                var Difference_In_Days = Math.abs(Difference_In_Time / (1000 * 3600 * 24));

                var tot = 0;

                if (Difference_In_Days > 7) {
                  tot = tot + Math.floor(Difference_In_Days / 7) * item.harga.mingguan;
                }

                tot = tot + (Difference_In_Days % 7) * item.harga.harian;

                console.log(tot);

                $('#harga').val('Harga : Rp ' + tot.toString().replace(/\B(?=(\d{3})+(?!\d))/g, "."));

              })

            </script>
        </div>

      </div>
    </div>
  </div>

